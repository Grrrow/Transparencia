---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import InitiativeRow from "../../components/InitiativeRow.astro";

import initiativesData from "../../data/initiatives_detailed.json";

const initiatives = initiativesData.iniciativas;

// Sort by date descending (assuming format DD/MM/YYYY)
const sortedInitiatives = [...initiatives].sort((a, b) => {
    const dateA = new Date(a.fecha_presentado.split("/").reverse().join("-"));
    const dateB = new Date(b.fecha_presentado.split("/").reverse().join("-"));
    return dateB.getTime() - dateA.getTime();
});
// Extract unique values for filters
const authors = [
    ...new Set(sortedInitiatives.map((i) => i.autor).filter(Boolean)),
].sort();
const types = [
    ...new Set(sortedInitiatives.map((i) => i.tipo_iniciativa).filter(Boolean)),
].sort();
const statuses = [
    ...new Set(sortedInitiatives.map((i) => i.resultado_tram).filter(Boolean)),
].sort();

// Helper for type labels in dropdown
const getTypeLabel = (type: string) => {
    if (type === "Proyecto_ley") return "Proyecto de Ley";
    if (type === "Decreto_ley") return "Real Decreto-Ley";
    if (type.includes("Proposicion_ley")) return "Proposición de Ley";
    return type.replace(/_/g, " ");
};
---

<Layout title="Iniciativas Legislativas | Transparencia Política España">
    <div class="page-wrapper">
        <main class="main-content">
            <div class="content-container">
                <header class="page-header">
                    <h1 class="page-title">Iniciativas Legislativas</h1>
                    <p class="page-subtitle">
                        Explora las últimas iniciativas presentadas en el
                        Congreso, desde Proyectos de Ley hasta Reales Decretos.
                    </p>
                </header>

                {/* Dashboard Stats Section */}

                {/* Filters Bar */}
                <div class="filters-bar">
                    <div class="filter-group">
                        <label for="filter-author">Autor:</label>
                        <select id="filter-author" class="filter-select">
                            <option value="all">Todos los autores</option>
                            {
                                authors.map((author) => (
                                    <option value={author}>{author}</option>
                                ))
                            }
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="filter-type">Tipo:</label>
                        <select id="filter-type" class="filter-select">
                            <option value="all">Todos los tipos</option>
                            {
                                types.map((type) => (
                                    <option value={type}>
                                        {getTypeLabel(type)}
                                    </option>
                                ))
                            }
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="filter-status">Estado:</label>
                        <select id="filter-status" class="filter-select">
                            <option value="all">Todos los estados</option>
                            {
                                statuses.map((status) => (
                                    <option value={status}>{status}</option>
                                ))
                            }
                        </select>
                    </div>

                    <div class="results-count">
                        <span id="visible-count"
                            >{sortedInitiatives.length}</span
                        > resultados
                    </div>
                </div>

                <div class="initiatives-list" id="initiatives-list">
                    {
                        sortedInitiatives.map((initiative) => (
                            <div
                                class="initiative-item"
                                data-author={initiative.autor}
                                data-type={initiative.tipo_iniciativa}
                                data-status={initiative.resultado_tram || ""}
                            >
                                <InitiativeRow initiative={initiative} />
                            </div>
                        ))
                    }
                </div>

                <div id="no-results" class="no-results" style="display: none">
                    <p>
                        No se encontraron iniciativas con los filtros
                        seleccionados.
                    </p>
                    <button id="clear-filters" class="clear-btn"
                        >Limpiar filtros</button
                    >
                </div>
            </div>
        </main>
    </div>
</Layout>

<script>
    // Client-side filtering logic
    const authorSelect = document.getElementById(
        "filter-author",
    ) as HTMLSelectElement;
    const typeSelect = document.getElementById(
        "filter-type",
    ) as HTMLSelectElement;
    const statusSelect = document.getElementById(
        "filter-status",
    ) as HTMLSelectElement;
    const listItems = document.querySelectorAll(".initiative-item");
    const noResults = document.getElementById("no-results");
    const clearBtn = document.getElementById("clear-filters");
    const countSpan = document.getElementById("visible-count");

    function filterInitiatives() {
        const authorValue = authorSelect.value;
        const typeValue = typeSelect.value;
        const statusValue = statusSelect.value;

        let visibleCount = 0;

        listItems.forEach((item) => {
            const el = item as HTMLElement;
            const itemAuthor = el.dataset.author || "";
            const itemType = el.dataset.type || "";
            const itemStatus = el.dataset.status || "";

            const matchesAuthor =
                authorValue === "all" || itemAuthor === authorValue;
            const matchesType = typeValue === "all" || itemType === typeValue;
            const matchesStatus =
                statusValue === "all" || itemStatus === statusValue;

            if (matchesAuthor && matchesType && matchesStatus) {
                el.style.display = "block";
                visibleCount++;
            } else {
                el.style.display = "none";
            }
        });

        // Update UI
        if (countSpan) countSpan.textContent = visibleCount.toString();

        if (noResults) {
            noResults.style.display = visibleCount === 0 ? "block" : "none";
        }
    }

    // Event Listeners
    authorSelect?.addEventListener("change", filterInitiatives);
    typeSelect?.addEventListener("change", filterInitiatives);
    statusSelect?.addEventListener("change", filterInitiatives);

    clearBtn?.addEventListener("click", () => {
        if (authorSelect) authorSelect.value = "all";
        if (typeSelect) typeSelect.value = "all";
        if (statusSelect) statusSelect.value = "all";
        filterInitiatives();
    });
</script>

