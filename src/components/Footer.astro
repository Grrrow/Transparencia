---
const year = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <p>
            &copy; {year} Transparencia Política España. Un proyecto Open Source.
        </p>
        <div class="links">
            <a href="#">Aviso Legal</a>
            <a href="#">Privacidad</a>
            <a
                href="https://github.com/borjagodoy/transparencia"
                target="_blank">GitHub</a
            >
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(--color-surface);
        border-top: 1px solid var(--color-border);
        padding: 2rem 0;
        margin-top: auto;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    p {
        margin: 0;
        color: var(--color-text-muted);
        font-size: 0.875rem;
    }

    .links {
        display: flex;
        gap: 1.5rem;
    }

    .links a {
        color: var(--color-text-muted);
        font-size: 0.875rem;
    }

    .links a:hover {
        color: var(--color-primary);
    }
</style>
