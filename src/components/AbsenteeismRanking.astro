---
interface DeputyRank {
    name: string;
    party: string;
    count: number;
    avatar?: string;
}

interface Props {
    data: DeputyRank[];
}

const { data } = Astro.props;

// Determine max value for progress bar normalization (default to 50 if low)
const maxCount =
    data.length > 0 ? Math.max(...data.map((d) => d.count), 50) : 50;

function getInitials(name: string) {
    if (!name) return "?";
    // Usually "Surname, Name". Split by comma
    const parts = name.split(",");
    if (parts.length > 1) {
        // Return Name Initial + First Surname Initial
        const firstName = parts[1].trim()[0];
        const surname = parts[0].trim()[0];
        return `${firstName}${surname}`;
    }
    return name.substring(0, 2);
}

function getPartyColor(party: string) {
    const p = party.toLowerCase();
    if (p.includes("pp") || p.includes("popular")) return "blue";
    if (p.includes("psoe") || p.includes("socialista")) return "red";
    if (p.includes("vox")) return "green";
    if (p.includes("sumar")) return "magenta";
    return "default";
}

function getRankIcon(index: number) {
    if (index === 0) return "ü•á";
    if (index === 1) return "ü•à";
    if (index === 2) return "ü•â";
    return `#${index + 1}`;
}
---

<div class="ant-card">
    <div class="ant-card-head">
        <div class="header-content">
            <div class="ant-card-head-title">üèÜ Ranking de No Votaciones</div>
            <div class="ant-card-subtitle">
                Presentes pero en silencio: Diputados logados que no emitieron
                voto
            </div>
        </div>
    </div>
    <div class="ant-card-body">
        {
            data.length === 0 && (
                <div class="empty-state">Sin datos disponibles</div>
            )
        }

        <ul class="ant-list">
            {
                data.map((deputy, index) => (
                    <li class="ant-list-item">
                        <div class="rank-col">
                            <span class="rank-icon">{getRankIcon(index)}</span>
                        </div>

                        <div class="avatar-col">
                            <div class="ant-avatar">
                                {getInitials(deputy.name)}
                            </div>
                        </div>

                        <div class="content-col">
                            <div class="row-top">
                                <span class="deputy-name">{deputy.name}</span>
                                <span
                                    class={`ant-tag tag-${getPartyColor(deputy.party)}`}
                                >
                                    {deputy.party
                                        .replace("Grupo Parlamentario ", "")
                                        .replace("en el Congreso", "")
                                        .substring(0, 15)}
                                </span>
                            </div>
                            <div class="row-bottom">
                                <div
                                    class="progress-wrap"
                                    title={`${deputy.count} votaciones en las que figura como 'No Vota'`}
                                >
                                    <div class="progress-track">
                                        <div
                                            class="progress-bar"
                                            style={`width: ${(deputy.count / maxCount) * 100}%`}
                                        />
                                    </div>
                                    <span class="progress-text">
                                        {deputy.count} no votos
                                    </span>
                                </div>
                            </div>
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</div>

